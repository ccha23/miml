#!/bin/bash

for f in "part1/Formulation" "part1/DonskerVaradhan" "part1/Training" "part1/f-Divergence" "part2/MI"
do
    read -r -p "process ${f}?[Y/n] " input

    case $input in
        [yY][eE][sS]|[yY]|'')
    echo "Executing..."
    jupytext --from ipynb --to md:myst -o $f.md $f.ipynb
    perl -0777 -i -pe 's/---\s*\*\*(.*?)\*\*(.*)(\X*?)---/````{prf:\l$1}$2$3````/gm' $f.md
    perl -0777 -i -pe 's/(\*\*Solution\*\*\X*?)((?:\+\+\+|```|\Z))/````{toggle}\n$1````\n\n$2/gm' $f.md
    ;;
        [nN][oO]|[nN])
    echo "Skipped..."
        ;;
        *)
    echo "Invalid input..."
    exit 1
    ;;
    esac
done